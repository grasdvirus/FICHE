rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ✅ USERS
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // ✅ CONVERSATIONS
    match /conversations/{conversationId} {
      allow read: if request.auth != null && request.auth.uid in resource.data.participantIds;
      allow write: if request.auth != null && request.auth.uid in request.resource.data.participantIds;

      // ✅ MESSAGES dans une conversation
      match /messages/{messageId} {
        allow read: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds;
        allow write: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds;
      }
    }
  }
}
