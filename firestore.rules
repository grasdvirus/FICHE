rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Les profils utilisateur peuvent être lus par n'importe quel utilisateur authentifié (pour démarrer des conversations)
    // mais ne peuvent être modifiés que par l'utilisateur lui-même.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    // Les conversations ne peuvent être lues ou écrites que par les participants.
    match /conversations/{conversationId} {
      allow read, write: if request.auth != null && request.auth.uid in resource.data.participantIds;

      // Les messages au sein d'une conversation suivent la même règle.
      match /messages/{messageId} {
        allow read, write: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds;
      }
    }
    
    // Les communautés peuvent être lues par tout utilisateur authentifié.
    // La création est autorisée pour les utilisateurs authentifiés.
    // La mise à jour est autorisée pour permettre de rejoindre/quitter.
    match /communities/{communityId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null;
        allow update: if request.auth != null;
        allow delete: if request.auth.uid == resource.data.ownerId;
    }
  }
}
