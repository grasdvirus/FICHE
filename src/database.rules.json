{
  "rules": {
    ".read": false,
    ".write": false,
    "status": {
      ".read": "auth != null",
      "$uid": {
        ".write": "auth != null && auth.uid == $uid"
      }
    },
    "communities": {
      ".read": "auth != null",
      "$communityId": {
        ".write": "auth != null",
        ".validate": "(!newData.exists() && data.child('creatorId').val() == auth.uid) || (newData.exists() && newData.hasChildren(['name', 'description', 'creatorId', 'createdAt', 'visibility', 'memberCount', 'members']))",
        "name": {
          ".validate": "newData.isString() && newData.val().length >= 3 && newData.val().length <= 100 && (!data.exists() || newData.val() == data.val() || data.child('creatorId').val() == auth.uid)"
        },
        "description": {
          ".validate": "newData.isString() && newData.val().length <= 500 && (!data.exists() || newData.val() == data.val() || data.child('creatorId').val() == auth.uid)"
        },
        "visibility": {
          ".validate": "newData.val() == 'public' && (!data.exists() || newData.val() == data.val())"
        },
        "creatorId": {
          ".validate": "newData.isString() && ((!data.exists() && newData.val() == auth.uid) || (data.exists() && newData.val() == data.val()))"
        },
        "createdAt": {
          ".validate": "newData.isNumber() && ((!data.exists()) || (data.exists() && newData.val() == data.val()))"
        },
        "memberCount": {
          ".validate": "newData.isNumber() && ((!data.exists() && newData.val() == 1) || (data.exists() && (newData.val() == data.val() + 1 || newData.val() == data.val() - 1)))"
        },
        "members": {
          "$uid": {
            ".validate": "(newData.exists() && newData.hasChildren(['joinedAt']) && newData.child('joinedAt').isNumber()) || (!newData.exists() && data.exists())"
          }
        },
        "$other": {
          ".validate": false
        }
      }
    },
    "community-messages": {
      "$communityId": {
        ".read": "root.child('communities/' + $communityId + '/members/' + auth.uid).exists()",
        ".write": "(!newData.exists() && root.child('communities/' + $communityId + '/creatorId').val() == auth.uid) || (newData.exists() && root.child('communities/' + $communityId + '/members/' + auth.uid).exists())",
        "$messageId": {
          ".validate": "newData.hasChildren(['content', 'senderId', 'timestamp', 'senderName']) && newData.child('content').isString() && newData.child('content').val().length > 0 && newData.child('content').val().length <= 5000 && newData.child('senderId').isString() && newData.child('senderId').val() == auth.uid && newData.child('timestamp').isNumber() && newData.child('senderName').isString()"
        }
      }
    },
    "community-unread-counts": {
      "$communityId": {
        ".read": "root.child('communities/' + $communityId + '/members/' + auth.uid).exists()",
        ".write": "(!newData.exists() && root.child('communities/' + $communityId + '/creatorId').val() == auth.uid) || newData.exists()",
        "$uid": {
          ".write": "root.child('communities/' + $communityId + '/members/' + auth.uid).exists()",
          ".validate": "newData.isNumber()"
        }
      }
    }
  }
}
