{
  "rules": {
    "status": {
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid === $uid"
      }
    },

    "communities": {
      ".read": "auth != null",

      "$communityId": {
        ".write": "auth != null",

        // Empêche de modifier le creatorId
        "creatorId": {
          ".validate": "newData.val() === data.val() || !data.exists()"
        },
        "memberCount": {
          ".validate": "newData.isNumber() && newData.val() >= 0"
        },
        // Empêche de supprimer tout si pas connecté
        ".validate": "auth != null"
      }
    }
  }
}
