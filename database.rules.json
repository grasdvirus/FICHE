{
  "rules": {
    // Default to locked down for security
    ".read": false,
    ".write": false,

    // Rules for user presence (online/offline status)
    "status": {
      // Any authenticated user can read presence data
      ".read": "auth != null",
      "$uid": {
        // A user can only write to their own status node
        ".write": "auth != null && auth.uid === $uid"
      }
    }
  }
}
